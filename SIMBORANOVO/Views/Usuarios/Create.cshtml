@model Simbora04.Models.Usuarios

@{
    ViewData["Title"] = "Create";
}
<head>

    <link rel="stylesheet" href="/css/Usuarios.css" />
</head>
<body>

    <div class="loginbox">
        
        <div class="col-md-4">
              <form asp-action="Create" class="center">
                    <h1 style="width: 220px;">Cadastre-se!</h1>
                      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                      <div class="form-group" style="width: 220px;">
                          <label asp-for="Nome" class="control-label"></label>
                          <input asp-for="Nome" class="form-control" />
                          <span asp-validation-for="Nome" class="text-danger"></span>
                      </div>
                      <div class="form-group" style="width: 220px;">
                          <label asp-for="Senha" class="control-label"></label>
                          <input asp-for="Senha" class="form-control" />
                          <span asp-validation-for="Senha" class="text-danger"></span>
                      </div>
                      <div class="form-group">
                          <input type="submit" value="Criar conta!" class="btn btn-primary" />
                          <a class="btn btn-primary" asp-controller="Usuarios" asp-action="ContaJaExiste" style=" border: none; outline: none; height: 40px; background: #FF7575; color: #fff; font-size: 18px; border-radius: 20px; margin-top: 20px;">Já tenho conta!</a>
                          
                      </div>
                  </form>
              
        </div>
    </div>

 

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>